<% include ./partials/header %>
<% include ./partials/navbar %>
        
        <div class="ui main text container">
                <div class="ui huge header container centered"> Welcome to Byte Sized Ideas</div>
                <div class="ui top attached segment">
                        <div class="ui divided items">
                                <% blogs.forEach(function(blog){ %>                        
                                      <div class="item">
                                             <div class="image">
                                                     <img src= "<%= blog.image %>" class="ui image">
                                             </div>
                                             <div class="content">
                                                        <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                                                        <div class="meta">
                                                                <span><%= blog.created.toDateString() %></span>
                                                        </div>
                                                        <div class="description">
                                                                <p> <%- blog.body.substring(0,100) %>... </p>
                                                        </div>
                                                        <div class="extra">
                                                                <a href="/blogs/<%= blog._id %>" class="ui floated basic blue button">
                                                                         Read More<i class="right chevron icon"></i></a> 
                                                        </div>
                                             </div>
                                            
                                            
                                      </div>
                                <% }); %>
                        </div>  
                </div>
                <div class="ui divider" id="paginate">
                        <div class="ui pagination menu">
                         
                                 <% if (nextPage>numPages || currentPage>1) { %>
                                <div class="item">
                                        <a href="/blogs/pages/<%=prevPage%>"> &lt;&lt; Newer Posts</a>
                                </div>
                                
                            
                                <% } else  { %>
                                    <div class="item">
                                                <span> &lt;&lt; Newer Posts</span>
                                        </div> 
                                <% } %>
                                <% if  (prevPage===0 || currentPage<numPages) { %>
                                     <div class="item">
                                                 
                                                <a href="/blogs/pages/<%=nextPage%>"> &gt;&gt; Older Posts</a>
                                        </div>
                                <% } else { %>
                                    <div class="item">
                                        <span>&gt;&gt; Older Posts</span>
                                        
                                </div>
                                <% } %>
                        
                        
                   </div>
                </div>
                
        </div>

<% include ./partials/footer %>