<% include ./partials/header %>
<% include ./partials/navbar %>
        
        <div class="ui main text container">
                <div class="ui huge header container centered"> Welcome to Byte Sized Ideas</div>
                <div class="ui top attached segment">
                        <div class="ui divided items">
                                <% blogs.forEach(function(blog){ %>                        
                                      <div class="item">
                                             <div class="image">
                                                     <img src= "<%= blog.image %>" class="ui image">
                                             </div>
                                             <div class="content">
                                                        <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                                                        <div class="meta">
                                                                <span><%= blog.created.toDateString() %></span>
                                                        </div>
                                                        <div class="description">
                                                                <p> <%- blog.body.substring(0,100) %>... </p>
                                                        </div>
                                                        <div class="extra">
                                                                <a href="/blogs/<%= blog._id %>" class="ui floated basic blue button">
                                                                         Read More<i class="right chevron icon"></i></a> 
                                                        </div>
                                             </div>
                                            
                                            
                                      </div>
                                <% }); %>
                        </div>  
                </div>
                
        </div>

<% include ./partials/footer %>